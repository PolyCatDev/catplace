---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import LinkTree from "../components/LinkTree.astro";

const Title = "PolyCat - Home";
const Description = "PolyCat's corner of the internet";
const HeaderTitle = "Welocome to PolyCat's website";

const SocialLinks = [
  {
    href: "https://sunny.garden/@PolyCat",
    text: "Mastodon",
    label: "Link to PolyCat's Mastodon",
  },
  {
    href: "https://cara.app/polycat",
    text: "Cara",
    label: "Link to PolyCat's Cara",
  },
  {
    href: "https://github.com/PolyCatDev",
    text: "Github",
    label: "Link to PolyCat's Github",
  },
];

const ContactLinks = [
  {
    href: "mailto:contact.polycat@proton.me",
    text: "contact.polycat@proton.me",
    label: "Email link to contact PolyCat",
  },
];

const ProjectLinks = [
  {
    href: "https://github.com/PolyCatDev/bluecat",
    text: "BlueCat",
    label: "Link to BlueCat project",
  },
  {
    href: "https://flipper-cafe.duckdns.org/",
    text: "Flipper Cafe",
    label: "Link to Flipper Cafe project",
  },
  {
    href: "https://github.com/PolyCatDev/obs-waykey",
    text: "OBS WayKey",
    label: "Link to OBS WayKey project",
  },
];
---

<Layout title={Title} description={Description}>
  <Header title={HeaderTitle} />
  <LinkTree title="You can find me here" links={SocialLinks} />
  <LinkTree title="Contact me here" links={ContactLinks} />
  <LinkTree title="Here are some of my cool projects" links={ProjectLinks} />
</Layout>

<style>
  div {
    background-color: whitesmoke;
    display: flex;
    justify-content: center;
    box-shadow: 0 4px 8px -4px rgba(0, 0, 0, 0.5);
  }

  @media (max-width: 664px) {
    div {
      flex-direction: column;
    }
  }
</style>
