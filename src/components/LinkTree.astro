---
interface Link {
    href: string;
    text: string;
    label: string;
}

interface Props {
    title: string;
    links: Link[];
}

const { title, links } = Astro.props;
---

<div class="container">
    <h2>{title}</h2>

    <nav>
        {
            links.map((link) => (
                <a href={link.href} aria-label={link.label}>
                    <div class="link">{link.text}</div>
                </a>
            ))
        }
    </nav>
</div>

<style>
    nav {
        font-size: 120%;
        display: flex;
        flex-direction: column;
    }

    div.link {
        background-color: rgb(173, 99, 99);
        border-radius: 30px;
        padding: 20px;
        border: 5px solid rgb(34, 36, 41);
        box-shadow: 0 0 12px rgb(58, 58, 88);
        margin: 3px 0;
    }

    a {
        font-weight: bold;
        padding: 2px;
    }


    h2 {
        margin-top: 0;
    }
</style>
