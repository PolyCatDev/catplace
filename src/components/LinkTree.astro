---

interface Link {
  href: string;
  text: string;
}

interface Props {
    links: Link[];
}

const { links } = Astro.props;
---

<div>
    <h3>You can find me here</h3>
    <hr />

    <nav>
        { links.map( link => (<a href={link.href}>{link.text}</a>)) }
    </nav>
</div>

<style>
    div {
        border-radius: 10px;
        text-align: center;
        padding: 20px;
        padding-top: 10px;
    }

    nav {
        display: flex;
        flex-direction: column;
    }

    a {
        color: darkslategray;
    }
</style>
